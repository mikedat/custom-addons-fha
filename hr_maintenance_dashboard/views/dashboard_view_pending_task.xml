<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- vista tree para las vistas pendientes -->
        <record id="dashboard_pending_task_view_tree" model="ir.ui.view">
            <field name="name">dashboard_pending_task.view.tree</field>
            <field name="model">maintenance.request</field>
            <field name="arch" type="xml">
                <tree string="Tareas pendientes">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="schedule_date"/>
                    <field name="priority"/>
                    <field name="maintenance_type"/>
                    <field name="user_id" />
                </tree>
            </field>
        </record>
  
        <!-- vista kanban para las vistas pendientes -->
        <record id="dashboard_pending_task_view_kanban" model="ir.ui.view">
            <field name="name">dashboard_pending_task.view.kanban</field>
            <field name="model">maintenance.request</field>
            <field name="arch" type="xml">
                <kanban default_group_by="maintenance_team_id">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <h4>
                                    <a type="open">Tarea: <field name="name"/></a>
                                </h4>
                                <ul>
                                    <li>Responsable: <field name="user_id"/></li>
                                    <li>Prioridad de la tarea: <field name="priority" widget="priority"/></li>
                                    <li>Fecha agendada: <field name="schedule_date"/></li>
                                    <li>Tipo de mantenimiento: <field name="maintenance_type"/></li>
                                </ul>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- filtros para las vistas pendientes -->
        <record id="dashboard_filters_view_search" model="ir.ui.view">
            <field name="name">dashboard_filter_search.view.search</field>
            <field name="model">maintenance.request</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_request_view_search"/>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <filter name="filter_pending_day" string="Pendientes para el día" domain="[('pending_day', '=', True)]"/>
                    <filter name="filter_pending_week" string="Pendientes para la semana" domain="[('pending_week', '=', True)]"/>
                    <filter name="filter_pending_month" string="Pendientes para el mes" domain="[('pending_month', '=', True)]"/>
                    <filter name="filter_pending_halfyear" string="Pendientes para los próximos 6 meses" domain="[('pending_halfyear', '=', True)]"/>
                    <filter name="filter_pending_year" string="Pendientes para el próximo año" domain="[('pending_year', '=', True)]"/>
                    
                    <!-- Filtro para agrupar por responsables de cada tarea -->
                    <group expand="0" string="Agrupar por">
                        <filter 
                            name="group_maintenance_user" 
                            string="Responsable de tarea"
                            context="{'group_by': 'user_id'}"
                        />
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo> 