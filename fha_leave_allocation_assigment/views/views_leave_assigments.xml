<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <!-- Inicio para vista para desbloquear date_from en estado draft -->
      <record id="fha_leave_assigments_view_form" model="ir.ui.view">
        <field name="name">fha_leave_assigments.view.form</field>
        <field name="model">hr.leave.allocation</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_allocation_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_from'][@widget='date'][@nolabel='1']" position="attributes">
                <attribute name="readonly" remove="1"/>
                <attribute name="attrs">
                    {
                        'readonly': [('state', 'not in', ['draft'])],
                        'invisible': ['&amp;', ('allocation_type', '=', 'regular'), ('state', 'not in', ('draft', 'confirm'))]
                    }
                </attribute>
            </xpath>
        </field>
      </record>  
    <!-- Final de la vista para desbloquear date_from con estado draft -->
    
        <record id="fha_leave_assigments_view_activity" model="ir.ui.view">
            <field name="name">fha_leave_assigments.view.activity</field>
            <field name="model">hr.leave.allocation</field>
            <field name="inherit_id" ref="hr_holidays.hr_leave_allocation_view_form_dashboard"/>
             <field name="priority">99</field>
            <field name="arch" type="xml">
                 <xpath expr="//div[@name='validity_label']" position="attributes">
                    <attribute name="invisible">0</attribute>
                </xpath>
                <xpath expr="//div[@name='validity']" position="attributes">
                    <attribute name="invisible">0</attribute>
                </xpath>
                <xpath expr="//field[@name='date_from']" position="attributes">
                    <attribute name="nolabel">0</attribute>
                </xpath>

                <xpath expr="//div[@name='duration_display']" position="after">
                    <div class="o_td_label">
                        <label for="date_from" string="Fecha de ValidaciÃ³n"/>
                    </div>
                    <div class="o_row" name="validity">
                        <field name="date_from" widget="date"/>
                        <i class="fa fa-long-arrow-right mx-2" aria-label="Hasta" title="Hasta"/>
                    </div>
                </xpath>

                <xpath expr="//div[@name='validity_label']" position="replace"/>
                <xpath expr="//div[@name='validity']" position="replace"/>
            </field>
        </record> 
    </data>
</odoo>
