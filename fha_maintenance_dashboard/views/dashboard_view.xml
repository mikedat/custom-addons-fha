<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="maintenance_dashboard_custom" model="ir.ui.view">
            <field name="name">dashboard_maintenance_view_kanban</field>
            <field name="model">maintenance.request</field>
            <field name="priority">99</field>
            <field name="arch" type="xml">
                <kanban>
                    <!-- Declaramos los campos que vamos a necesitar en la vista -->
                    <field name="dashboard_pending_count"/>
                    <field name="dashboard_completed_count"/>
                    <field name="pending_task_data"/>
                    <field name="expired_task_data"/>
                    <field name="executed_task_data"/>
                    <field name="executed_expired_task_data"/>
                    <templates>
                        <t t-name="kanban-box">
                            <!-- Hay que mirar porqué genera un pequeño scroll horizontal -->
                            <div class="container-fluid px-0 vw-100 min-vw-100" style="transform: translateX(calc(50vw - 50%));">
                            <!-- Hay que mirar porqué genera un pequeño scroll horizontal -->
                                <div class="dashboard-header bg-primary p-3 text-white w-100">
                                    <h4 class="text-center mb-0 display-6">
                                        Tablero de tareas
                                    </h4>
                                </div>

                                <div class="dashboard-counters bg-light p-3" style="background: white; transition: transform 0.3s ease;">
                                    <!-- Primera fila de contadores -->
                                    <div class="row justify-content-center g-3 mb-4">
                                        <div class="col-12 col-md-6 col-lg-4">
                                            <div class="counter-box shadow-sm p-4 rounded">
                                                <i class="fa fa-tasks fa-2x text-primary mb-3"/>
                                                <h3 class="counter-value display-5">
                                                    <field name="dashboard_pending_count"/>
                                                </h3>
                                                <p class="counter-label text-muted mb-0">Por atender</p>
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-6 col-lg-4">
                                            <div class="counter-box shadow-sm p-4 rounded">
                                                <i class="fa fa-check-circle fa-2x text-success mb-3"/>
                                                <h3 class="counter-value display-5">
                                                    <field name="dashboard_completed_count"/>
                                                </h3>
                                                <p class="counter-label text-muted mb-0">Completadas</p>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Sección de tareas caducadas y pendientes -->
                                    <div class="row g-3 mb-4 bg-primary">
                                        <div class="col-12 col-lg-6">
                                            <div class="bg-danger p-3 rounded shadow-sm">
                                                <div class="d-flex flex-column flex-md-row align-items-center justify-content-between mb-3">
                                                    <h2 class="h4 text-white mb-3 mb-md-0">Tareas caducadas</h2>
                                                    <button class="btn btn-light btn-sm " type="object" name="open_expired_task_view">
                                                        <i class="fa fa-arrow-right me-2"/>
                                                            Más Tareas
                                                    </button>
                                                </div>
                                                    <!-- Si existen tareas dentro del campo expired_task_data me genera la tabla con sus tareas -->
                                                    <t t-if="record.expired_task_data.raw_value != false">
                                                        <table class="table table-dark table-striped table-hover mb-0">
                                                            <thead>
                                                                <tr>
                                                                    <th class="scope text-center">#</th>
                                                                    <th class="scope text-center">Nombre de la tarea</th>
                                                                    <th class="scope text-center">Fecha agendada para la tarea</th>
                                                                    <th class="scope text-center">Responsable de la tarea</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <t t-foreach="record.expired_task_data.raw_value" t-as="task">
                                                                    <tr>
                                                                        <td class="small fs-5 text-center">
                                                                            <t t-esc="task_index"/>
                                                                        </td>
                                                                        <td class="small fs-5 text-center">
                                                                            <t t-esc="task['name']"/>
                                                                        </td>
                                                                        <td class="small fs-5 text-center">
                                                                            <t t-esc="task['schedule_date']"/>
                                                                        </td>
                                                                        <td class="small fs-5 text-center">
                                                                            <t t-if="task['user_id'] == false">
                                                                            Sin Responsable
                                                                            </t>
                                                                            <t t-else="">
                                                                                <t t-esc="task['user_id']"/>
                                                                            </t>
                                                                        </td>
                                                                    </tr>
                                                                </t>
                                                            </tbody>
                                                        </table>
                                                    </t>
                                                    <!-- Si no, muestra un div avisando de que no hay tareas -->
                                                    <t t-else="">
                                                        <div class="alert alert-light mb-0">¡No hay tareas caducadas!</div>
                                                    </t>
                                            </div>
                                        </div>

                                        <div class="col-12 col-lg-6">
                                            <div class="bg-info p-3 rounded shadow-sm">
                                                <div class="d-flex flex-column flex-md-row align-items-center justify-content-between mb-3">
                                                    <h2 class="h4 text-white mb-3 mb-md-0">Tareas pendientes</h2>
                                                    <button class="btn btn-light btn-sm " type="object" name="open_pending_task_view">
                                                        <i class="fa fa-arrow-right me-2"/>
                                                            Más Tareas
                                                    </button>
                                                </div>
                                                <div class="row">
                                                    <div class="col-12">
                                                        <!-- Si existen tareas dentro del campo pending_task_data me genera la tabla con sus tareas -->
                                                        <t t-if="record.pending_task_data.raw_value != false">
                                                            <table class="table table-dark table-striped table-hover mb-0">
                                                            <thead>
                                                                <tr>
                                                                    <th class="scope text-center">#</th>
                                                                    <th class="scope text-center">Nombre de la tarea</th>
                                                                    <th class="scope text-center">Fecha agendada para la tarea</th>
                                                                    <th class="scope text-center">Responsable de la tarea</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <t t-foreach="record.pending_task_data.raw_value" t-as="task">
                                                                    <tr>
                                                                        <td class="small fs-5 text-center">
                                                                            <t t-esc="task_index"/>
                                                                        </td>
                                                                        <td class="small fs-5 text-center">
                                                                            <t t-esc="task['name']"/>
                                                                        </td>
                                                                        <td class="small fs-5 text-center">
                                                                            <t t-esc="task['schedule_date']"/>
                                                                        </td>
                                                                        <td class="small fs-5 text-center">
                                                                            <t t-if="task['user_id'] == false">
                                                                            Sin Responsable
                                                                            </t>
                                                                            <t t-else="">
                                                                                <t t-esc="task['user_id']"/>
                                                                            </t>
                                                                        </td>
                                                                    </tr>
                                                                </t>
                                                            </tbody>
                                                        </table>
                                                        </t>
                                                        <!-- Si no, muestra un div avisando de que no hay tareas -->
                                                        <t t-else="">
                                                            <div class="alert alert-light mb-0">¡No hay tareas pendientes!</div>
                                                        </t>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Sección de tareas ejecutadas -->
                                    <div class="row g-3 bg-primary">
                                        <div class="col-12 col-lg-6">
                                            <div class="bg-success p-3 rounded shadow-sm">
                                                <h2 class="h4 text-white mb-3">Ejecutadas en plazo</h2>
                                                <div class="table-responsive">
                                                    <!-- Si existen tareas dentro del campo executed_task_data me genera la tabla con sus tareas -->
                                                    <t t-if="record.executed_task_data.raw_value != false">
                                                        <table class="table table-striped table-hover mb-0">
                                                            <thead>
                                                                <tr>
                                                                    <th class="scope text-white text-center">#</th>
                                                                    <th class="scope text-white text-center">Nombre de la tarea</th>
                                                                    <th class="scope text-white text-center">Fecha agendada para la tarea</th>
                                                                    <th class="scope text-white text-center">Responsable de la tarea</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <t t-foreach="record.executed_task_data.raw_value" t-as="task">
                                                                    <tr>
                                                                        <td class="small fs-5 text-white text-center">
                                                                            <t t-esc="task_index"/>
                                                                        </td>
                                                                        <td class="small fs-5 text-white text-center">
                                                                            <t t-esc="task['name']"/>
                                                                        </td>
                                                                        <td class="small fs-5 text-white text-center">
                                                                            <t t-esc="task['schedule_date']"/>
                                                                        </td>
                                                                        <td class="small fs-5 text-white text-center">
                                                                            <t t-if="task['user_id'] == false">
                                                                                Sin Responsable
                                                                            </t>
                                                                            <t t-else="">
                                                                                <t t-esc="task['user_id']"/>
                                                                            </t>
                                                                        </td>
                                                                    </tr>
                                                                </t>
                                                            </tbody>
                                                        </table>
                                                    </t>
                                                    <!-- Si no, muestra un div avisando de que no hay tareas -->
                                                    <t t-else="">
                                                        <div class="alert alert-light mb-0">¡No hay tareas Ejecutadas!</div>
                                                    </t>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-12 col-lg-6">
                                            <div class="bg-warning p-3 rounded shadow-sm">
                                                <h2 class="h4 text-dark mb-3">Ejecutadas fuera de plazo</h2>
                                                <div class="table-responsive">
                                                    <!-- Si existen tareas dentro del campo executed_expired_task_data me genera la tabla con sus tareas -->
                                                    <t t-if="record.executed_expired_task_data.raw_value != false">
                                                        <table class="table table-striped table-hover mb-0">
                                                            <thead>
                                                                <tr>
                                                                    <th class="scope text-center">#</th>
                                                                    <th class="scope text-center">Nombre de la tarea</th>
                                                                    <th class="scope text-center">Fecha agendada para la tarea</th>
                                                                    <th class="scope text-center">Responsable de la tarea</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <t t-foreach="record.executed_expired_task_data.raw_value" t-as="task">
                                                                    <tr>
                                                                        <td class="small fs-5 text-center">
                                                                            <t t-esc="task_index"/>
                                                                        </td>
                                                                        <td class="small fs-5 text-center">
                                                                            <t t-esc="task['name']"/>
                                                                        </td>
                                                                        <td class="small fs-5 text-center">
                                                                            <t t-esc="task['schedule_date']"/>
                                                                        </td>
                                                                        <td class="small fs-5 text-center">
                                                                            <t t-if="task['user_id'] == false">
                                                                                Sin Responsable
                                                                            </t>
                                                                            <t t-else="">
                                                                                <t t-esc="task['user_id']"/>
                                                                            </t>
                                                                        </td>
                                                                    </tr>
                                                                </t>
                                                            </tbody>
                                                        </table>
                                                    </t>
                                                    <!-- Si no, muestra un div avisando de que no hay tareas -->
                                                    <t t-else="">
                                                        <div class="alert alert-light mb-0">¡No hay tareas Ejecutadas fuera de plazo!</div>
                                                    </t>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>